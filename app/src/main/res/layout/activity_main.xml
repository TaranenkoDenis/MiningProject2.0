<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.denis.miningproject20.views.activities.MainActivity">

    <TextView
        android:id="@+id/tv_name_reported_hashrate"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:text="@string/reported_hashrate"
        android:background="@color/colorReportedHashrate"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:textAlignment="center"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/guideline2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_last_update" />

    <TextView
        android:id="@+id/tv_reported_hashrate"
        android:background="@color/colorReportedHashrate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="@string/default_hashrate_0_h_s"
        android:textAlignment="center"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/guideline2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_reported_hashrate"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="-6dp" />

    <TextView
        android:id="@+id/tv_name_average_hashrate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:text="@string/average_hashrate"
        android:textAlignment="center"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="-1dp"
        android:background="@color/colorAverageHashrate"
        android:onClick="onClickAverageHashrate"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/tv_reported_hashrate"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tv_average_hashrate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:text="@string/default_hashrate_0_h_s"
        android:textAlignment="center"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline2"
        android:background="@color/colorAverageHashrate"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_average_hashrate"
        android:layout_marginRight="8dp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="-23dp" />

    <TextView
        android:id="@+id/tv_name_current_hashrate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_weight="1"
        android:background="@color/colorCurrentHashrate"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="@string/current_hashrate"
        android:textAlignment="center"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/guideline2"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_last_update" />

    <TextView
        android:id="@+id/tv_current_hashrate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_weight="1"
        android:background="@color/colorCurrentHashrate"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="@string/default_hashrate_0_h_s"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_current_hashrate"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="-6dp"
        app:layout_constraintHorizontal_bias="1.0" />

    <TextView
        android:id="@+id/tv_name_workers"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:textAlignment="center"
        android:text="@string/string_workers"
        android:layout_marginLeft="8dp"
        android:background="@color/colorWorkers"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/guideline2"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginTop="-1dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_current_hashrate" />

    <TextView
        android:id="@+id/tv_number_workers"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/default_string_total_workers"
        android:layout_marginStart="8dp"
        android:padding="8dp"
        android:textAlignment="center"
        android:layout_marginEnd="8dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_workers"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/guideline2"
        android:background="@color/colorWorkers"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginTop="-22dp" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="Day"
        app:layout_constraintHorizontal_bias="0.38"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/textView18"
