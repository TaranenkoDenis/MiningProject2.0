        app:layout_constraintRight_toRightOf="@+id/textView19"
        app:layout_constraintTop_toBottomOf="@+id/textView17"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:text="Mounth"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView18"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/tv_currency3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:text="Currency3"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/graphEthermineHashrate" />

    <TextView
        android:id="@+id/tv_currency2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="24dp"
        android:text="Currency2"
        app:layout_constraintRight_toLeftOf="@+id/tv_currency3"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/graphEthermineHashrate" />

    <TextView
        android:id="@+id/tv_currency1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Currency1"
        app:layout_constraintRight_toLeftOf="@+id/tv_currency2"
        android:layout_marginRight="27dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/graphEthermineHashrate" />

    <TextView
        android:id="@+id/tv_value_currency1_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.0000"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView17"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_currency1"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/tv_currency1"
        app:layout_constraintHorizontal_bias="1.0" />


    <TextView
        android:id="@+id/tv_value_currency3_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
